generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLES {
  SuperAdmin
  Trainer
  User
}

model Role {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name ROLES  @unique
  users User[]
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  password  String
  roleId    String   @db.ObjectId
  role      Role     @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
}
