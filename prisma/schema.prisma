generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLES {
  SuperAdmin
  Trainer
  User
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  ROLES  @unique
  users User[]
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String?
  lastName   String?
  email      String   @unique
  phone      String?
  password   String?
  provider   String   @default("LOCAL")
  providerId String?
  roleId     String

  role       Role     @relation(fields: [roleId], references: [id])
  otps       Otp[]    // Added back-relation to Otp
  createdAt  DateTime @default(now())
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

