generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLES {
  SuperAdmin
  Trainer
  User
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  ROLES  @unique
  users User[]
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String?
  lastName   String?
  email      String   @unique
  phone      String?
  password   String?
  provider   String   @default("LOCAL")
  providerId String?
  roleId     String

  role       Role     @relation(fields: [roleId], references: [id])
  otps       Otp[]    // Added back-relation to Otp
  specialities UserSpeciality[]
  trainerWeeklyAvailabilities TrainerWeeklyAvailability[] @relation("Trainer_Weekly")
  trainerDailyAvailabilities TrainerDailyAvailability[] @relation("Trainer_Daily")
  trainerTimeSlots           TrainerTimeSlot[]           @relation("Trainer_Slot")

  createdAt  DateTime @default(now())
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model UserSpeciality {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  specialityId  Int      
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, specialityId])
}


model TrainerWeeklyAvailability {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  trainerId            String   @db.ObjectId
  weekStartDate        DateTime
  weekEndDate          DateTime
  requiredMinutes      Int      @default(2700)   //45 * 60
  totalBookedMinutes   Int      @default(0)
  isCompleted          Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  trainer              User     @relation("Trainer_Weekly", fields: [trainerId], references: [id])
  dailyAvailabilities  TrainerDailyAvailability[] @relation("Week_Daily")
}

model TrainerDailyAvailability {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  trainerWeekId     String   @db.ObjectId
  trainerId         String   @db.ObjectId
  date              DateTime
  dayOfWeek         String

  isAvailable       Boolean   @default(false)
  totalDayMinutes   Int

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  trainer           User                        @relation("Trainer_Daily", fields: [trainerId], references: [id])
  trainerWeek       TrainerWeeklyAvailability   @relation("Week_Daily", fields: [trainerWeekId], references: [id])
  timeSlots         TrainerTimeSlot[]           @relation("Daily_TimeSlot")
}

enum SlotType {
  ALTERNATIVE
  PEAK
}

model TrainerTimeSlot {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  dailyAvailabilityId String   @db.ObjectId
  trainerId           String   @db.ObjectId
  date                DateTime
  startTime           DateTime
  endTime             DateTime
  slotType            SlotType
  durationMinutes     Int
  isBooked            Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  dailyAvailability   TrainerDailyAvailability @relation("Daily_TimeSlot", fields: [dailyAvailabilityId], references: [id])
  trainer             User                    @relation("Trainer_Slot", fields: [trainerId], references: [id])

  @@index([trainerId])
  @@index([date])
}

