generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLES {
  SuperAdmin
  Trainer
  Customer
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  ROLES  @unique
  users User[]
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String?
  lastName   String?
  email      String   @unique
  phone      String?
  password   String?
  provider   String   @default("LOCAL")
  providerId String?
  roleId     String
  isActive   Boolean  @default(false)

  role       Role     @relation(fields: [roleId], references: [id])
  otps       Otp[]    // Added back-relation to Otp
  specialities UserSpeciality[]
  trainerWeeklyAvailabilities TrainerWeeklyAvailability[] @relation("Trainer_Weekly")
  trainerDailyAvailabilities TrainerDailyAvailability[] @relation("Trainer_Daily")
  trainerTimeSlots           TrainerTimeSlot[]           @relation("Trainer_Slot")
  trainerBookings            TrainerBooking[]            @relation("Trainer_Booking") // As trainer in bookings
  customerBookings           TrainerBooking[]            @relation("Customer_Booking") // As customer in bookings

  // Added back-relations for AssignedCustomer
  assignedCustomersAsCustomer AssignedCustomer[] @relation("AssignedCustomer_Customer")
  assignedCustomersAsTrainer  AssignedCustomer[] @relation("AssignedCustomer_Trainer")

  userProfileDetails UserProfileDetail[] @relation("UserProfileDetailToUser")

  createdAt  DateTime @default(now())
}

model UserProfileDetail {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  address         String?
  bio             String?
  hostGymName     String?
  hostGymAddress  String?
  avatarUrl       String?
  dob             DateTime?
  gender          String?

  user            User     @relation("UserProfileDetailToUser", fields: [userId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId

  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model UserSpeciality {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  specialityId  Int      
  createdAt     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, specialityId])
}


model TrainerWeeklyAvailability {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  trainerId            String   @db.ObjectId
  weekStartDate        DateTime
  weekEndDate          DateTime
  requiredMinutes      Int      @default(2700)   //45 * 60
  totalBookedMinutes   Int      @default(0)
  isCompleted          Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  trainer              User     @relation("Trainer_Weekly", fields: [trainerId], references: [id])
  dailyAvailabilities  TrainerDailyAvailability[] @relation("Week_Daily")
}

model TrainerDailyAvailability {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  trainerWeekId     String   @db.ObjectId
  trainerId         String   @db.ObjectId
  date              DateTime
  dayOfWeek         String

  isAvailable       Boolean   @default(false)
  totalDayMinutes   Int

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  trainer           User                        @relation("Trainer_Daily", fields: [trainerId], references: [id])
  trainerWeek       TrainerWeeklyAvailability   @relation("Week_Daily", fields: [trainerWeekId], references: [id])
  timeSlots         TrainerTimeSlot[]           @relation("Daily_TimeSlot")
}

enum SlotType {
  ALTERNATIVE
  PEAK
}

model TrainerTimeSlot {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  dailyAvailabilityId String   @db.ObjectId
  trainerId           String   @db.ObjectId
  date                DateTime
  startTime           DateTime
  endTime             DateTime
  slotType            SlotType
  durationMinutes     Int
  isBooked            Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  dailyAvailability   TrainerDailyAvailability @relation("Daily_TimeSlot", fields: [dailyAvailabilityId], references: [id])
  trainer             User                    @relation("Trainer_Slot", fields: [trainerId], references: [id])
  bookings            TrainerBooking[]        @relation("TimeSlot_Booking")

  @@index([trainerId])
  @@index([date])
}

model TrainerBooking {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId            String   @db.ObjectId
  trainerId             String   @db.ObjectId
  timeSlotId            String   @db.ObjectId
  isAttendedByTrainer   Boolean  @default(false)
  isCancelled           Boolean  @default(false)

  originalTimeSlotId    String?  @db.ObjectId
  rescheduledCount      Int      @default(0)
  lastRescheduledAt     DateTime?
  accolades             Int[]   @default([])

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  customer              User                @relation("Customer_Booking", fields: [customerId], references: [id])
  trainer               User                @relation("Trainer_Booking", fields: [trainerId], references: [id])
  timeSlot              TrainerTimeSlot     @relation("TimeSlot_Booking", fields: [timeSlotId], references: [id])
}

model AssignedCustomer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String   @db.ObjectId
  trainerId   String   @db.ObjectId

  isActive    Boolean  @default(true)
  startDate   DateTime @default(now())
  endDate     DateTime?

  customer    User     @relation("AssignedCustomer_Customer", fields: [customerId], references: [id])
  trainer     User     @relation("AssignedCustomer_Trainer", fields: [trainerId], references: [id])
  createdAt           DateTime @default(now())
  
  updatedAt           DateTime @updatedAt
  @@unique([customerId, trainerId])
  @@index([customerId, isActive])
  @@index([trainerId, isActive])
}
